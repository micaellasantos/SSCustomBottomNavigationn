<!-- res/drawable/ripple_background.xml -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="?attr/colorControlHighlight">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Set this radius to match your desired corner roundness -->
            <solid android:color="#E0E0E0" /> <!-- Ripple effect color -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Set this radius to match your button corner roundness -->
            <solid android:color="@color/color_white" /> <!-- Button background color -->
        </shape>
    </item>
</ripple>
